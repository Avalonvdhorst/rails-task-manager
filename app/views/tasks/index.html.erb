<div class="taskdetails">
<h1>My tasks</h1>
</div>
<ul>
<% @tasks.each do |task| %>
<% if task.completed? == true %>
 <li class="list"> <i class="far fa-check-square"> </i> <%= link_to task.title, task_path(task.id) %>
 <i class="far fa-trash-alt"></i> </li>
 <% else %>
 <li class="list"> <i class="far fa-square"> </i>
 <%= link_to task.title, task_path(task.id) %>
 <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, task_path(task.id), method: :delete %>

  </li>
 <% end %>
<% end %>
</ul>

<h3> <i class="fas fa-plus"></i> <%= link_to "Add a task", new_task_path %> </h3>


