<div>
  <div class="header">
  <div>
  <h1> <%= @task.title %> </h1>
  </div>
  <div class="edit">
    <h3> <%= link_to "Edit task", edit_task_path %> </h3>
  </div>
  </div>
    <div class="taskdetails">
      <h3> <%= @task.details %> </h3>
    </div>
    <% if @task.completed? == true %>
    <h3> <i class="far fa-check-square"> </i> This task is completed </h3>
    <% else %>
    <h3> <i class="far fa-square"> </i> This task is not yet completed </h3>
    <% end %>
</div>
<h3> <%= link_to "Back to list", tasks_path %> </h3>
